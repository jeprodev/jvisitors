<?xml version = "1.0" encoding = "utf-8"?> 
<extension version="3.0" type="module" client="site" method="upgrade" > 
	<name>jvcounter</name> 
	<version>1.0.3</version> 
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license> 
	<author>jeprodev</author> 
	<authoremail>jeprodev@gmail.com</authoremail> 
	<authorurl>jeprodev.net</authorurl> 
	<copyright>Copyright (C) 2011. All rights reserved.</copyright>
	<description>MOD_JVCOUNTER_XML_DESCRIPTION</description>
	<creationDate>2 - 7 - 2012</creationDate> 
	<files> 
		<filename module="mod_jvcounter">mod_jvcounter.php</filename> 
		<filename>helper.php</filename> 
		<filename>index.html</filename> 
		<folder>tmpl</folder> 		
		<folder>images</folder>
		<folder>assets</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_jvcounter.ini</language>
		<language tag="en-GB">language/en-GB.mod_jvcounter.sys.ini</language>
		<language tag="fr-FR">language/fr-FR.mod_jvcounter.ini</language>
		<language tag="fr-FR">language/fr-FR.mod_jvcounter.sys.ini</language>
	</languages>
	<config> 
		<fields name="params" > 
			<fieldset name="BASIC"> 
				<field name="moduleclass_sfx" type="text" size="40" default="" label="Module Class Suffix" description="Choose a module class suffix" /> 
				<field name="jvc_is_sunday" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOW_TODAY_VISITS_LABEL" description="MOD_JVCOUNTER_SHOW_TODAY_VISITS_DESC"  >
					<option value="0">MOD_JVC_NO</option>
					<option value="1">MOD_JVC_YES</option>
				</field>
				<field name="jvc_language" type="list" default="en" label="MOD_JVCOUNTER_LANG_LABEL" description="MOD_JVCOUNTER_LANG_DESC" >
					<option value="en">MOD_JVC_LANG_EN</option>
					<option value="fr">MOD_JVC_LANG_FR</option>
				</field>
			</fieldset>
			<fieldset name="DISPLAY_CONFIG">
				<field name="jvc_show_today" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOW_TODAY_VISITS_LABEL" description="MOD_JVCOUNTER_SHOW_TODAY_VISITS_DESC"  >
					<option value="0">MOD_JVC_NO</option>
					<option value="1">MOD_JVC_YES</option>
				</field>
				<field name="jvc_show_yesterday" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOW_YESTERDAY_VISITS_LABEL" description="MOD_JVCOUNTER_SHOW_YESTERDAY_VISITS_DESC"  >
					<option value="0">MOD_JVC_NO</option>
					<option value="1">MOD_JVC_YES</option>
				</field>
				<field name="jvc_show_this_week" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOW_THIS_WEEK_VISITS_LABEL" description="MOD_JVCOUNTER_SHOW_THIS_WEEK_VISITS_DESC"  >
					<option value="0">MOD_JVC_NO</option>
					<option value="1">MOD_JVC_YES</option>
				</field>
				<field name="jvc_show_last_week" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOW_LAST_WEEK_VISITS_LABEL" description="MOD_JVCOUNTER_SHOW_LAST_WEEK_VISITS_DESC"  >
					<option value="0">MOD_JVC_NO</option>
					<option value="1">MOD_JVC_YES</option>
				</field>
				<field name="jvc_show_this_month" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOW_THIS_MONTH_VISITS_LABEL" description="MOD_JVCOUNTER_SHOW_THIS_MONTH_VISITS_DESC"  >
					<option value="0">MOD_JVC_NO</option>
					<option value="1">MOD_JVC_YES</option>
				</field>
				<field name="jvc_show_last_month" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOW_LAST_MONTH_VISITS_LABEL" description="MOD_JVCOUNTER_SHOW_LAST_MONTH_VISITS_DESC"  >
					<option value="0">MOD_JVC_NO</option>
					<option value="1">MOD_JVC_YES</option>
				</field>
				<field name="jvc_show_all" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHO_WALL_VISITS_LABEL" description="MOD_JVCOUNTER_SHOW_ALL_VISITS_DESC"  >
					<option value="0">MOD_JVC_NO</option>
					<option value="1">MOD_JVC_YES</option>
				</field>
				<field name="jvc_stats_type" type="list" delault="default" label="MOD_JVCOUNTER_STATS_LABEL" description="MOD_JVCOUNTER_STATS_DESC" >
					<option value="default">Default</option>
				</field>
				<field name="jvc_digit_type" type="list" delault="default" label="MOD_JVCOUNTER_DIGIT_LABEL" description="MOD_JVCOUNTER_DIGIT_DESC" >
					<option value="default">Default</option>
				</field>
			</fieldset>
		</fields> 
	</config> 
</extension> 